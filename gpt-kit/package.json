{
  "name": "gpt-kit",
  "displayName": "vscode-gpt-kit",
  "description": "VS Code extension toolkit for GPT prompt files (.gpt, .prompt, .gptx)",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/rwsci/vscode-gpt-kit.git"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "gpt",
        "aliases": ["GPT", "GPT Prompt"],
        "extensions": [".gpt", ".prompt", ".gptx"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gpt",
        "scopeName": "source.gpt",
        "path": "./syntaxes/gpt.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "gpt-kit.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}